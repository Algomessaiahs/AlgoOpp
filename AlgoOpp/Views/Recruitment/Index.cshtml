@model IEnumerable<AlgoOpp.Models.RECRUITMENT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout_Company.cshtml";
}

<h2>Recruitment</h2>

<button class="btn btn-default">
    @Html.ActionLink("Create New", "Create")
</button>
<br />
<hr />
<table class="table container-fluid">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.POSITION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JOB_LOCATION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SKILLS_REQ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JOB_DESC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.REQ_CGPA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CREATED_DATE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CREATED_BY)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MODIFIED_DATE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MODIFIED_BY)
        </th>
        <th class="hidden">
            @Html.DisplayNameFor(model => model.EST_ID)
        </th>
        <th>Edit</th>
        <th>Detail</th>
        <th>Delete</th>
        <th>Send</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.POSITION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JOB_LOCATION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SKILLS_REQ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JOB_DESC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.REQ_CGPA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CREATED_DATE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CREATED_BY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MODIFIED_DATE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MODIFIED_BY)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.EST_ID)
            </td>
            <td style="background-color:cornsilk">
                @Html.ActionLink("Edit", "Edit", new { id = item.RECRUIT_ID })
            </td>
            <td style="background-color:cornsilk">
                @Html.ActionLink("Details", "Details", new { id = item.RECRUIT_ID })
            </td>
            <td style="background-color:cornsilk">
                @Html.ActionLink("Delete", "Delete", new { id = item.RECRUIT_ID })
            </td>
            @*//changed*@
            <td style="background-color: cornsilk">
                @Html.ActionLink("Send", "Send", new { id = item.RECRUIT_ID }@*, new { onclick = " confirm('Are you sure to send the recruitment details to college?');" }*@)
                @{
                    var parameter = Request.QueryString["ac"];
                    //Check parameter here and display Message
                    if (parameter == "success")
                    {
                        <div class="alert alert-success alert-dismissable">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Record Send Successfully.</strong>
                        </div>
                    }
                }
            </td>

        </tr>
    }
   
</table>
<style>
    table {
        border: solid 2px black;
    }

    th {
        border: solid 2px black;
        background-color: black;
        color: aliceblue;
    }

    td {
        border: solid 2px black;
        background-color: cornsilk;
        color: black;
        
    }

    a:link {
        text-decoration: none;
        color: black;
    }

    button {
        margin-right: 2px;
        margin-left: 2px;
    }
</style>