@model AlgoOpp.Models.Membership

@{
    ViewBag.Title = "Login";


}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <center>
        <div class="container-fluid">

            <div class="form-horizontal">
                <h4>Login</h4>
                <hr />

                <form autocomplete="off">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <!--@Html.LabelFor(model => model.Email_id, htmlAttributes: new { @class = "control-label col-md-2" })-->
                        @*<label class="label">Email Id :</label>*@
                        <div class="">
                            @Html.EditorFor(model => model.Email_id, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email_id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @*@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        @*<label class="label">Password : </label>*@
                        <div class="">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div>
                            @*<button type="submit" value="Login" class="btn btn-primary">Login</button>*@
                            <input type="submit" value="Login" class="btn btn-default" />
                            @*<button class="btn btn-danger">@Html.ActionLink("For New Registeration", "Register" })</button>*@
                            <button class="btn btn-danger"><a style="text-decoration:none; color:white;" href="~/CollegeRegister/Register">For New Registeration </a></button>

                        </div>
                    </div>
                </form>

            </div>
        </div>
    </center>

    <style>

        .form-horizontal {
            background: linear-gradient(to top, rgba(0,0,0,0.8)50%,rgba(0,0,0,0.8)50%);
            padding: 50px;
            border-radius: 20px;
            margin-top: 50px;
            width: 450px;
        }

        h4 {
            color: cadetblue;
            text-align: center;
            font-family: 'Bookman Old Style';
        }

        label {
            color: cadetblue;
            padding-left: 50px;
        }

        Input {
            background: transparent;
            border-bottom: 1px solid cadetblue;
            border-top: none;
            border-right: none;
            border-left: none;
            color: #fff;
            font-size: 15px;
            letter-spacing: 1px;
            margin-top: 30px;
            font-family: sans-serif;
        }

        .form-horizontal input:focus {
            outline: none;
        }

        ::placeholder {
            color: #fff;
            font-family: Arial;
        }

        .icons a {
            text-decoration: none;
            color: #fff;
        }

        .btn-danger {
            float: right;
            text-decoration: none;
            width: fit-content;
            height: fit-content;
            padding: 10px;
            font-weight: 700;
            margin-right: 50px;
        }

        .btn-primary {
            float: left;
            width: fit-content;
            height: fit-content;
            padding: 10px;
            font-weight: 700;
            margin-left: 50px;
            padding-left: 25px;
            padding-right: 25px;
        }

        hr {
            width: 200px;
        }
        /*  .btn {
            background-color:gold;
            margin-top: 13px;
            color: #fff;
            font-size: 15px;
            border-bottom-right-radius: 5px;
            border-bottom-right-radius: 5px;
            transition: 0.2s ease;
            cursor: pointer;
        }*/

    </style>
}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
