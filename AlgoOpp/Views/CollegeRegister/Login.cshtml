@model AlgoOpp.Models.Membership


@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <center>
        <div class="container-fluid">
            
            <div class="form-horizontal">
                    <h4>COLLEGE LOGIN</h4>
                    <hr />
                    <form autocomplete="off">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group visually-hidden">

                            <div class="">
                                @Html.TextBoxFor(model => model.Est_Type, new { @class = "form-control", @Value = "College" })
                            </div>

                        </div>
                        @Html.ValidationMessageFor(model => model.Est_Type, "", new { @class = "text" })
                        <div class="form-group">


                            <div class="">
                                @Html.EditorFor(model => model.Email_id, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Email Id" } })
                                @Html.ValidationMessageFor(model => model.Email_id, "", new { @class = "text" })

                            </div>
                        </div>

                        <div class="form-group">

                            <div class="">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text" })
                            </div>
                        </div>
                        <br />
                        <div class="">
                            <div>
                                <button type="submit" value="Login" class="btn btn-primary">Login</button><br />
                               <hr/>
                                <p style="color: cadetblue; font-size: larger; ">
                                    For New Users<a style="text-decoration:none; color:white; font-size:larger; font:700;" href="~/CollegeRegister/Register"> Click here..!</a>
                                </p>

                            </div>
                        </div>
                    </form>

            </div>
        </div>
    </center>

    <style>

        .form-horizontal {
            background: linear-gradient(to top, rgba(0,0,0,0.8)50%,rgba(0,0,0,0.8)50%);
            padding: 50px;
            border-radius: 20px;
            margin-top: 200px;
            width: 450px;
        }

        h4 {
            color: cadetblue;
            text-align: center;
            font-family: 'Bookman Old Style';
        }

        label {
            color: cadetblue;
            padding-left: 50px;
        }

        Input {
            background: transparent;
            border-bottom: 1px solid cadetblue;
            border-top: none;
            border-right: none;
            border-left: none;
            color: #fff;
            font-size: 15px;
            letter-spacing: 1px;
            margin-top: 30px;
            font-family: sans-serif;
        }

        .form-horizontal input:focus {
            outline: none;
        }

        ::placeholder {
            color: #fff;
            font-family: Arial;
        }

        .icons a {
            text-decoration: none;
            color: #fff;
        }


        .btn-primary {
            /* float: left;*/
            width: 200px;
            height: fit-content;
            padding: 10px;
            font-weight: 700;
            padding-left: 25px;
            padding-right: 25px;
        }

        hr {
            width: 200px;
            color:aliceblue;
        }
        .text {
            color: palevioletred;
        }
